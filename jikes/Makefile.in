SHELL=@SHELL@
srcdir=@srcdir@

ERASE=rm -f

# Yes, this is a bit of a hack but we are just doing
# it until we switch over to automake.

all:
	cd src ;\
	make all

install:
	cd src ;\
	make install

install-strip:
	cd src ;\
	make install-strip

uninstall:
	cd src ;\
	make uninstall

clean:
	cd src ;\
	make clean

distclean:
	$(ERASE) config.cache config.log config.h config.status Makefile
	cd src ;\
	make distclean

Makefile: $(srcdir)/Makefile.in
	./config.status

